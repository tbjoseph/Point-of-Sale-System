<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.beta.reports.SellsReportController">
    <children>
        <VBox>
            <children>
                <Label styleClass="header" text="What Sells Together" />
                <Label text="The following represents a list of inventory items that sell often together. Frequency is the percent of the time the two items were ordered together, out of the total amount of times both were ordered." />

                <TableView VBox.vgrow="ALWAYS" maxHeight="Infinity" fx:id="resultsTable" layoutX="26.0" layoutY="34.0">
                    <columns>
                        <TableColumn fx:id="menuNamesCol" prefWidth="500.0" text="Menu Items" />
                        <TableColumn fx:id="freqCol" prefWidth="200.0" text="Frequency" />
                    </columns>
                </TableView>
                <Button text="Back" onAction="#goBack" />
            </children>
        </VBox>

        <VBox fx:id="errorPane" alignment="CENTER">
            <children>
                <Label fx:id="errorText" layoutX="10.0" layoutY="10.0" text="" />
                <Button layoutX="10.0" layoutY="10.0" text="Close" onAction="#closeErrorPane"/>
            </children>
        </VBox>
    </children>
</StackPane>