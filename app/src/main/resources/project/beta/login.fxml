<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.beta.LoginController">
   <children>
      <Label fx:id="header" text="Log In" />
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Username:" />
            <TextField fx:id="username" promptText="Username" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Password:" />
            <TextField fx:id="password" promptText="Password" />
         </children>
      </HBox>
      <Label fx:id="errorText" text="" />
      <Button text="Submit" onAction="#tryLogin" />
   </children>
</VBox>
