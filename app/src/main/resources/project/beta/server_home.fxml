<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.beta.server.ServerHomeController">
   <children>
      <VBox GridPane.columnIndex="0" GridPane.vgrow="ALWAYS" maxHeight="Infinity" maxWidth="Infinity">
         <children>
            <!-- sides -->
            <Label styleClass="header" text="Sides" />
            <HBox prefHeight="100.0" fx:id="sidesCont">
               <children>
               </children>
            </HBox>

            <!-- entrees -->
            <Label styleClass="header" text="Entrees" />
            <GridPane fx:id="entreesCont" maxHeight="Infinity" VBox.vgrow="ALWAYS">
               <children>
               </children>
               <columnConstraints>
                  <ColumnConstraints hgrow="ALWAYS"/>
                  <ColumnConstraints hgrow="ALWAYS"/>
                  <ColumnConstraints hgrow="ALWAYS"/>
                  <ColumnConstraints hgrow="ALWAYS"/>
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints vgrow="ALWAYS"/>
                  <RowConstraints vgrow="ALWAYS"/>
                  <RowConstraints vgrow="ALWAYS"/>
               </rowConstraints>
            </GridPane>

            <!-- modifiers -->
            <Label styleClass="header" text="Modifiers" />
            <HBox prefHeight="100.0">
               <children>
                  <Button wrapText="true" HBox.hgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS" text="Bowl" fx:id="bowlButton" onAction="#bowlMode" />
                  <Button wrapText="true" HBox.hgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS" text="Plate" fx:id="plateButton" onAction="#plateMode" />
                  <Button wrapText="true" HBox.hgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS" text="Bigger Plate" fx:id="biggerPlateButton" onAction="#biggerPlateMode" />
                  <Button wrapText="true" HBox.hgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS" text="2 Sides" fx:id="twoSides" onAction="#twoSides" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox GridPane.columnIndex="1" GridPane.vgrow="ALWAYS" maxHeight="Infinity" maxWidth="Infinity">
         <children>
            <Label styleClass="header" text="Order View"/>
            <VBox fx:id="viewBox" minHeight="400" minWidth="200" maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS">
            </VBox>
            <HBox  prefHeight="100.0">
               <children>
                  <Button HBox.hgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity" fx:id="inactiveButton" text="Back" />
                  <Button HBox.hgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity" text="Next" onAction="#nextScreen" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" percentWidth="70.0" />
      <ColumnConstraints hgrow="SOMETIMES" percentWidth="30.0" />
   </columnConstraints>
</GridPane>
