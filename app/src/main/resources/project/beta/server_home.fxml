<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.beta.server.ServerHomeController">
   <children>
      <VBox spacing="10.0">
         <children>
            <!-- sides -->
            <Label text="Sides" />
            <HBox spacing="10.0">
               <children>
                  <Button text="Super Greens" onAction="#addSide" />
                  <Button text="Chow Mein" onAction="#addSide" />
                  <Button text="Fried Rice" onAction="#addSide" />
                  <Button text="White Steamed Rice" onAction="#addSide" />
                  <Button text="Brown Steamed Rice" onAction="#addSide" />
               </children>
            </HBox>

            <!-- entrees -->
            <Label text="Entrees" />
            <HBox spacing="10.0">
               <children>
                  <Button text="The Original Orange Chicken" onAction="#addEntree" />
                  <Button text="Black Pepper Angus Steak" onAction="#addEntree" />
                  <Button text="Grilled Teriyaki Chicken" onAction="#addEntree" />
                  <Button text="Broccoli Beef" onAction="#addEntree" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Button text="Honey Walnut Shrimp" onAction="#addEntree" />
                  <Button text="Kung Pao Chicken" onAction="#addEntree" />
                  <Button text="Beijing Beef" onAction="#addEntree" />
                  <Button text="Mushroom Chicken" onAction="#addEntree" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Button text="SweetFire Chicken Breast" onAction="#addEntree" />
                  <Button text="String Bean Chicken Breast" onAction="#addEntree" />
                  <Button text="Black Pepper Chicken" onAction="#addEntree" />
               </children>
            </HBox>

            <!-- modifiers -->
            <Label text="Modifiers" />
            <HBox spacing="10.0">
               <children>
                  <Button text="Family Meal" />
                  <Button text="New Meal" />
                  <Button text="A La Carte" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox spacing="10.0">
         <children>
            <VBox fx:id="orderView">
               <children>
               </children>
            </VBox>
            <HBox spacing="10.0">
               <children>
                  <Button text="Back" />
                  <Button text="Next" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
